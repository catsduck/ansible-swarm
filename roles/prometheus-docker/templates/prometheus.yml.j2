# {{ ansible_managed }}

scrape_configs:
- job_name: cadvisor
  scrape_interval: 5s
  static_configs:
  - targets:
    - btc-util1:{{ cadvisor_port | default('8080') }}
  relabel_configs:
    - source_labels: [__address__]
      target_label: instance
      action: replace
      regex: '(.*)(:.*)'
      replacement: '${1}'

- job_name: node_exporter
  scrape_interval: 5s
  static_configs:
  - targets:
    - btc-util1:9100
  relabel_configs:
    - source_labels: [__address__]
      target_label: instance
      action: replace
      regex: '(.*)(:.*)'
      replacement: '${1}'
