version: "3.7"

services:
  web:
    image: mempool/frontend:latest
    user: "1000:1000"
    restart: always
    stop_grace_period: 1m
    command: "./wait-for db:3306 --timeout=720 -- nginx -g 'daemon off;'"
    ports:
      - 80:8080
    environment:
      FRONTEND_HTTP_PORT: "8080"
      BACKEND_MAINNET_HTTP_HOST: "api"
    depends_on:
      - "api"
  api:
    image: mempool/backend:latest
    user: "1000:1000"
    restart: always
    stop_grace_period: 1m
    command: "./wait-for-it.sh db:3306 --timeout=720 --strict -- ./start.sh"
    volumes:
      - mempool-data:/backend/cache
    environment:
      RPC_HOST: "{{ vault_mempool_rpc_host }}"
      RPC_PORT: "8332"
      RPC_USER: "{{ vault_mempool_rpc_user }}"
      RPC_PASS: "{{ vault_mempool_rpc_pass }}"
      ELECTRUM_HOST: "{{ mempool_electrum_host }}"
      ELECTRUM_PORT: "50002"
      ELECTRUM_TLS: "true"
      MYSQL_HOST: "db"
      MYSQL_PORT: "3306"
      MYSQL_DATABASE: "mempool"
      MYSQL_USER: "{{ vault_mempool_mysql_user }}"
      MYSQL_PASS: "{{ vault_mempool_mysql_pass }}"
      BACKEND_MAINNET_HTTP_PORT: "8999"
      CACHE_DIR: "/backend/cache"
      MEMPOOL_CLEAR_PROTECTION_MINUTES: "20"
    depends_on:
      - "db"
  db:
    image: mariadb:10.7
    restart: always
    stop_grace_period: 1m
    volumes:
      - mysql-data:/var/lib/mysql
    environment:
      MYSQL_DATABASE: "mempool"
      MYSQL_USER: "{{ vault_mempool_mysql_user }}"
      MYSQL_PASSWORD: "{{ vault_mempool_mysql_pass }}"
      MYSQL_ROOT_PASSWORD: "{{ vault_mempool_mysql_root_pass }}"

volumes:
  mempool-data:
  mysql-data: